CREATE TABLE Contact (
id INTEGER PRIMARY KEY AUTOINCREMENT,
number TEXT NOT NULL,
name TEXT,
call_count INTEGER NOT NULL DEFAULT 0
);

selectAllContacts:
SELECT *
FROM Contact;

selectContact:
SELECT *
FROM Contact
WHERE id = ?;

selectContactByNumber:
SELECT *
FROM Contact
WHERE number = ?;

insertOrReplaceContact:
INSERT OR REPLACE
INTO Contact
VALUES ?;

insertContactByNumber:
INSERT OR REPLACE
INTO Contact(number)
VALUES (?);

insertContactByNumberAndName:
INSERT OR REPLACE
INTO Contact(number, name)
VALUES (?, ?);

incrementCallCount:
UPDATE Contact
SET call_count = call_count + 1
WHERE id = ?;

incrementCallCountByNumber:
UPDATE Contact
SET call_count = call_count + 1
WHERE id = ?;

deleteContact:
DELETE
FROM Contact
WHERE id = ?;

deleteAllContacts:
DELETE
FROM Contact;

selectCount:
SELECT COUNT(*)
FROM Contact;

isBlocked:
SELECT *
FROM Contact
WHERE Contact.number = ?;
