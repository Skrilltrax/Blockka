<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/bottom_sheet_top_padding"
    style="@style/BottomSheetDialogTheme">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/all_contacts"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_item_height"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:text="@string/all_contacts"
        android:textAlignment="viewStart"
        android:textColor="?attr/colorOnSurface"
        app:icon="@drawable/ic_contacts_24"
        app:iconPadding="@dimen/bottom_sheet_icon_padding"
        app:iconTint="?attr/colorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/recent_contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:rippleColor="?attr/colorSecondary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/recent_contacts"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_sheet_item_height"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:text="@string/recent_contacts"
        android:textAlignment="viewStart"
        android:textColor="?attr/colorOnSurface"
        app:icon="@drawable/ic_recents_24"
        app:iconPadding="@dimen/bottom_sheet_icon_padding"
        app:iconTint="?attr/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/all_contacts"
        app:rippleColor="?attr/colorSecondary" />

</androidx.constraintlayout.widget.ConstraintLayout>
